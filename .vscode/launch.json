    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "FASTA": "assemblies/Homo_sapiens.GRCh38.dna.primary_assembly.fa",
                "REFGENE": "reference/genes.refGene"
            },
            "args": [
                "pyhgvs.api:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI - chrX",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "FASTA": "tests/fixtures/Homo_sapiens.GRCh38.dna.chromosome.X.fa",
                "REFGENE": "tests/fixtures/genes.refGene"
            },
            "args": [
                "pyhgvs.api:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}